-- tag stats
db.projectdata.aggregate([
    { $match  : { 'LATEST' : true } },
    { $unwind : '$TAG_DATA' },
    { $group  : { '_id' : '$TAG_DATA.TAG', 'tagCount' : {$sum:1} } },
    { $sort   : {'tagCount' : -1 } }
])

-- number of active project
db.projectdata.count ( { 'LATEST' : true } )


-- average number of tags per project
db.projectdata.aggregate([
    { $match  : { 'LATEST' : true } },
    { $unwind : '$TAG_DATA' },
    { $group  : { '_id' : null, tagCount : {$avg: {$sum:1}}}}
])

